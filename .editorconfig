# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[VERSION]
insert_final_newline = false

# Spaces in PHP
[**.php]
indent_size = 4

# Spaces in PHP
[**.yml]
indent_size = 4

# Spaces in PHP
[**.yaml]
indent_size = 4

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
indent_size = 4
